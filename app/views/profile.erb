<div class="container">
  Welcome, <%= @user.email %>!
  You have played <%= @user.rounds.length %> rounds.
  <ul><% @user.rounds.each_with_index do |round, index| %>
    <li>In round <%= index + 1 %> you got <%= round.num_correct %> correct.</li>
    <% end %></ul>
<form action="/play" method="post" name="play-game">
 Pick a deck: 
<select name='deck_id'>
  <% @decks.each do |deck| %>
  <option value="<%= deck.id %>"><%= deck.name %></option>
  <%end%>

</select>
  <input type="submit" value="Play Game!">
</form>


</div>



