
<h2>Sign Up for an Account:</h2>
<% if @user.errors %>
  <ul class="errors">
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form method="post" action ="/user">
  <p><input type="email"  name = "user[email]" placeholder="Email" class="input" size="48"></p>
  <p><input type="password"  name="user[password]" placeholder="Password" class="input" size="48"></p>
  <p><input type="submit" value="Sign Up" class="button"></p>
</form>

