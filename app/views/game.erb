<div class="container">
<%= @card.definition %>
<h1><%= @card.answer %></h1>
<form action="/guess/<%= @round.id %>/<%= @card.id %>" method="post" name="guess-form">
  <input type="text" name="guess" size="64" placeholder="Guess the term here!">
  <input type="hidden" name="<%= @card.id %>">
  <input type="submit" value="Submit Answer!">
</form>
</div>